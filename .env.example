# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações do Supabase
SUPABASE_URL=sua_url_do_supabase
SUPABASE_KEY=sua_chave_do_supabase

# Configurações da Stellar Network
STELLAR_NETWORK=TESTNET  # ou MAINNET para produção
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Configurações do Pool de Staking
STAKING_POOL_ADDRESS=endereço_da_carteira_do_pool
STAKING_TOKEN_CODE=KALE
STAKING_TOKEN_ISSUER=endereço_do_emissor_do_token

# Configurações de Snapshot e Recompensas
SNAPSHOT_INTERVAL_CRON="0 0 * * *"  # Diariamente à meia-noite
REWARD_RATE=0.05  # 5% APY inicial