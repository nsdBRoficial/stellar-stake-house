# Configurações de Homologação
PORT=3001
NODE_ENV=staging

# Supabase (Homologação)
SUPABASE_URL=your_staging_supabase_url
SUPABASE_KEY=your_staging_supabase_anon_key

# Stellar Network (Testnet)
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Token KALE (Testnet)
KALE_ASSET_ISSUER=your_testnet_kale_issuer

# Configurações de Recompensas
REWARD_RATE=0.05

# JWT Secret (Homologação)
JWT_SECRET=your_staging_jwt_secret_key_here

# Snapshot Schedule (A cada 30 minutos para homologação)
SNAPSHOT_INTERVAL_CRON=*/30 * * * *

# Configurações de Segurança
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
SESSION_SECRET=your_staging_session_secret

# Configurações de Log
LOG_LEVEL=info
LOG_FILE_PATH=./logs/staging.log

# Configurações de Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL=60000
PERFORMANCE_MONITORING=true