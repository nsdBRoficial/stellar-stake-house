# Configurações de Produção
PORT=3001
NODE_ENV=production

# Supabase (Produção)
SUPABASE_URL=your_production_supabase_url
SUPABASE_KEY=your_production_supabase_anon_key

# Stellar Network (Mainnet)
STELLAR_NETWORK=mainnet
STELLAR_HORIZON_URL=https://horizon.stellar.org

# Token KALE (Mainnet)
KALE_ASSET_ISSUER=your_mainnet_kale_issuer

# Configurações de Recompensas
REWARD_RATE=0.05

# JWT Secret (Produção - DEVE SER ALTERADO)
JWT_SECRET=your_production_jwt_secret_key_here_CHANGE_THIS

# Snapshot Schedule (A cada hora para produção)
SNAPSHOT_INTERVAL_CRON=0 * * * *

# Configurações de Segurança
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
SESSION_SECRET=your_production_session_secret_CHANGE_THIS

# Configurações de Log
LOG_LEVEL=warn
LOG_FILE_PATH=./logs/production.log

# Configurações de Performance
MAX_CONCURRENT_REQUESTS=200
REQUEST_TIMEOUT=30000

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL=300000
PERFORMANCE_MONITORING=true
SECURITY_MONITORING=true

# Configurações de SSL/HTTPS
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Configurações de CORS
CORS_ORIGIN=https://your-production-domain.com
CORS_CREDENTIALS=true